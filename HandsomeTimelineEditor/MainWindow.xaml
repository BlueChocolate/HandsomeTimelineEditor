<Window x:Class="HandsomeTimelineEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HandsomeTimelineEditor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <DataGrid x:Name="DG_TimelineData" Grid.Row="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="时间" Width="*" Binding="{Binding Text}" />
                <DataGridComboBoxColumn Header="颜色" Width="*">
                </DataGridComboBoxColumn>
                <DataGridTextColumn Header="内容" Width="*" Binding="{Binding Text}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
